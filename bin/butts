#!/usr/bin/env ruby
# encoding: utf-8

require 'optparse'

require_relative '../lib/butts.rb'
require_relative '../lib/butts/version'

optparse = OptionParser.new do |opts|
  opts.banner = "Usage: #{File.basename($PROGRAM_NAME)} URL"

  opts.on('-h', '--help', 'Display this screen') do
    puts "Usage: #{File.basename($PROGRAM_NAME)} URL"
  end

  opts.on('-v', '--version', 'Display the version of butts') do
    puts Butts::VERSION
  end
end

optparse.parse!
